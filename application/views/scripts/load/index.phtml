<?php echo $this->paginationControl($this->myGames, 'Sliding', 'pagination_control.phtml'); ?>
<ul>
    <li>
        <a href="/" class="button">&laquo; <?php echo $this->translate('Back') ?></a>
    </li>
</ul>

